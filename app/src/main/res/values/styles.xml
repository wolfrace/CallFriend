<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomActionBarTheme"
        parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/color_primary</item>
    </style>

    <color name="color_primary_dark">#0288d1</color>
    <color name="color_primary">#03a9f5</color>
    <color name="text_color_primary">#ffffff</color>
    <color name="text_color">#333333</color>
    <color name="text_color_light">#cccccc</color>
    <color name="window_background">#ffffff</color>
    <color name="circle_button_color">#ff4181</color>
    <color name="text_days_left_color_urgently">#ff80ab</color>
    <color name="text_days_left_color_soon">@color/text_color_light</color>
    <color name="avatar_holder_background_color">@color/text_color_light</color>

</resources>

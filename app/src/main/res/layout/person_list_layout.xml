<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PersonActivity"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        >

        <ListView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/person_list_view"
                android:divider="@null" />
        <RelativeLayout android:layout_width="56dp"
                        android:layout_height="58dp"
                        android:background="@drawable/img_circle_shadow"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="8dp" >

                <RelativeLayout
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:background="@drawable/img_circle_background"
                        android:layout_alignParentTop="true"
                        >

                        <ImageView
                                android:id="@+id/person_add_image"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/ic_person_add_white_36dp"
                                android:layout_centerInParent="true" />

                </RelativeLayout>
        </RelativeLayout>

</RelativeLayout>


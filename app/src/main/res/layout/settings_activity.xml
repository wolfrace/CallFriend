<?xml version="1.0" encoding="utf-8"?>
    <!-- The main content view -->
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <!-- Add content here -->

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="56dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_info_outline_grey600_24dp"/>

                <TextView
                    android:id="@+id/settings_push_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_switch_push"
                    android:singleLine="true"
                    android:textSize="@dimen/standard_text_size"
                    android:textColor="@color/text_color_darkness"
                    android:layout_weight="1"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="8dp" />

                <FrameLayout
                    android:id="@+id/enable_switch_push_button"
                    android:layout_width="56dp"
                    android:clickable="true"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:layout_height="match_parent">

                    <CheckBox
                        android:id="@+id/settings_push_checkbox"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:clickable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:textSize="@dimen/standard_text_size"
                        android:button="@drawable/checkbox"
                        android:layout_marginLeft="16dp"
                        android:layout_gravity="center_vertical" />

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:id="@+id/sett_loadFriends"
                android:layout_height="56dp"
                android:clickable="true"
                android:focusable="false"
                android:background="@drawable/layout_clickable_click"
                android:focusableInTouchMode="false">

                <ImageView
                    android:src="@drawable/ic_vk_blue"
                    android:layout_width="72dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:id="@+id/settings_vk_label"
                    android:textSize="@dimen/standard_text_size"
                    android:textColor="@color/text_color_darkness"
                    android:text="@string/settings_get_friends_from_vk"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="12dp" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

